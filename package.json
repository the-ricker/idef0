{
  "name": "idef0",
  "displayName": "IDEF0 Diagram Editor",
  "description": "Preview and edit IDEF0 diagrams with live SVG rendering",
  "version": "0.0.1",
  "publisher": "jeffrey",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "idef0",
        "extensions": [
          ".idef0"
        ],
        "aliases": [
          "IDEF0"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "idef0",
        "scopeName": "source.idef0",
        "path": "./syntaxes/idef0.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "idef0.openPreview",
        "title": "IDEF0: Open Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "idef0.openPreviewToSide",
        "title": "IDEF0: Open Preview to Side",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "idef0.openPreviewToSide",
          "when": "resourceLangId == idef0",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "idef0.editor",
        "displayName": "IDEF0 Editor",
        "selector": [
          {
            "filenamePattern": "*.idef0"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
