{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IDEF0 Diagram",
  "description": "IDEF0 diagram model schema",
  "type": "object",
  "required": ["activities"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Diagram metadata",
      "properties": {
        "title": {
          "type": "string",
          "description": "Diagram title"
        },
        "author": {
          "type": "string",
          "description": "Author name"
        },
        "version": {
          "type": "string",
          "description": "Version number"
        },
        "description": {
          "type": "string",
          "description": "Diagram description"
        }
      }
    },
    "activities": {
      "type": "array",
      "description": "List of activities/functions",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["code", "label"],
        "properties": {
          "code": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+$",
            "description": "Unique activity code (e.g., A1, A2)"
          },
          "label": {
            "type": "string",
            "description": "Activity display name"
          },
          "inputs": {
            "type": "array",
            "description": "Input ICOMs",
            "items": {
              "$ref": "#/definitions/icom"
            }
          },
          "controls": {
            "type": "array",
            "description": "Control ICOMs",
            "items": {
              "$ref": "#/definitions/icom"
            }
          },
          "outputs": {
            "type": "array",
            "description": "Output ICOMs",
            "items": {
              "$ref": "#/definitions/icom"
            }
          },
          "mechanisms": {
            "type": "array",
            "description": "Mechanism ICOMs",
            "items": {
              "$ref": "#/definitions/icom"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "icom": {
      "type": "object",
      "required": ["label"],
      "properties": {
        "label": {
          "type": "string",
          "description": "ICOM label"
        },
        "code": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_]+$",
          "description": "Optional code for cross-referencing between activities"
        }
      }
    }
  }
}
