{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IDEF0 Diagram",
  "description": "IDEF0 diagram model schema",
  "type": "object",
  "required": ["activities", "arrows"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Diagram metadata",
      "properties": {
        "title": {
          "type": "string",
          "description": "Diagram title"
        },
        "author": {
          "type": "string",
          "description": "Author name"
        },
        "version": {
          "type": "string",
          "description": "Version number"
        },
        "description": {
          "type": "string",
          "description": "Diagram description"
        }
      }
    },
    "activities": {
      "type": "array",
      "description": "List of activities/functions",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "label"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+$",
            "description": "Unique activity identifier (e.g., A1, A2)"
          },
          "label": {
            "type": "string",
            "description": "Activity display name"
          }
        }
      }
    },
    "arrows": {
      "type": "array",
      "description": "List of ICOM arrows",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "from", "to", "label"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["input", "control", "output", "mechanism"],
            "description": "Arrow type (ICOM)"
          },
          "from": {
            "type": "string",
            "description": "Source activity ID or 'external'"
          },
          "to": {
            "type": "string",
            "description": "Target activity ID or 'external'"
          },
          "label": {
            "type": "string",
            "description": "Arrow label"
          }
        }
      }
    }
  }
}
