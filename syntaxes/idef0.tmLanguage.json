{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "IDEF0",
  "scopeName": "source.idef0",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#metadata"
    },
    {
      "include": "#activities"
    },
    {
      "include": "#icom"
    },
    {
      "include": "source.yaml"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.idef0",
          "match": "#.*$"
        }
      ]
    },
    "metadata": {
      "patterns": [
        {
          "name": "entity.name.tag.idef0",
          "match": "^\\s*(metadata|title|author|version|description):"
        }
      ]
    },
    "activities": {
      "patterns": [
        {
          "name": "keyword.control.idef0",
          "match": "^\\s*(activities):"
        },
        {
          "name": "entity.name.tag.idef0",
          "match": "^\\s+(code|label):"
        },
        {
          "name": "entity.name.class.idef0",
          "match": "(?<=code:\\s*)[A-Za-z0-9_]+"
        }
      ]
    },
    "icom": {
      "patterns": [
        {
          "name": "keyword.other.idef0",
          "match": "^\\s+(inputs|controls|outputs|mechanisms):"
        },
        {
          "name": "entity.name.tag.idef0",
          "match": "^\\s+(label|code):"
        },
        {
          "name": "string.quoted.idef0",
          "match": "(?<=code:\\s*)[A-Za-z0-9_]+"
        }
      ]
    }
  }
}
