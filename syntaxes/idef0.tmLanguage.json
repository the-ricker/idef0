{
  "scopeName": "source.idef0",
  "name": "IDEF0",
  "patterns": [
    { "include": "#comment" },
    { "include": "#statement" }
  ],
  "repository": {
    "comment": {
      "match": "#.*$",
      "name": "comment.line.number-sign.idef0"
    },
    "statement": {
      "match": "^(.+?)\\s+(receives|produces|respects|requires|is composed of)\\s+(.+)$",
      "captures": {
        "1": { "name": "entity.name.function.idef0" },
        "2": { "name": "keyword.operator.idef0" },
        "3": { "name": "variable.other.idef0" }
      }
    }
  }
}
